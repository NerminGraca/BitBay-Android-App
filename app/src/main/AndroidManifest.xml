<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nermingraca.bitbayapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".singletons.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ProductsActivity"
            android:label="@string/title_activity_show_product" >
        </activity>
        <activity
            android:name=".activities.ProductActivity"
            android:label="@string/title_activity_product" >
        </activity>
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".activities.SellerActivity"
            android:label="@string/title_activity_seller" >
        </activity>
        <activity
            android:name=".activities.FragmentedProductActivity"
            android:label="@string/title_activity_fragmented_product" >
        </activity>
        <activity
            android:name=".activities.CartActivity"
            android:label="@string/title_activity_cart" >
        </activity>
        <activity
            android:name=".activities.CartEmptyActivity"
            android:label="@string/title_activity_cart_empty" >
        </activity>
    </application>

</manifest>
